<%= render 'layouts/errors', :object => @message %>

<%= form_for @message do |f| %>
    <%= f.label :to %>
    <%= f.collection_select(:to, @contacts, :phone_number, :name, {}, { :multiple => true, :size => 5 }) %>
    <%= f.label :body %>
    <%= f.text_field :body %>
    <%= f.submit :submit %>
<% end %>
